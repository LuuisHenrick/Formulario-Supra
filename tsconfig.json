{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client"
    ],
    "skipLibCheck": true,
    /* Allow JS files */
    "allowJs": true,
    "checkJs": false,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}